{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "paths": {
      "commons/*": ["commons/*"],
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "styles/*": ["styles/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}
